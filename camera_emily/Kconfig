#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config EXAMPLES_CAMERA_EMILY
	bool "Camera_emily example"
	default n
	---help---
		Enable the camera example

if EXAMPLES_CAMERA_EMILY

config EXAMPLES_CAMERA_EMILY_PROGNAME
	string "Program name"
	default "camera_emily"
	depends on BUILD_KERNEL
	---help---
		This is the name of the program that will be use when the NSH ELF
		program is installed.

config EXAMPLES_CAMERA_EMILY_PRIORITY
	int "Camera_emily task priority"
	default 100

config EXAMPLES_CAMERA_EMILY_STACKSIZE
	int "Camera_emily stack size"
	default 2048

config EXAMPLES_CAMERA_EMILY_OUTPUT_LCD
	bool "Output LCD"

config EXAMPLES_CAMERA_EMILY_INFINITE
	bool "Capture image infinite"
	depends on EXAMPLES_CAMERA_EMILY_OUTPUT_LCD
	---help---
		Capturing images in infinite loop. If this option is enabled, then
		example never been stopped.

endif
